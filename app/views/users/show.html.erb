<div class="wrapper">
  <div class="container text-center">
    <div class="row">
      <div class="col-xs-8 col-xs-offset-2">
          <% avatar_url = current_user.facebook_picture_url || "http://placehold.it/30x30" %>
          <%= image_tag avatar_url, class: "avatar dropdown-toggle", id: "navbar-wagon-menu", "data-toggle" => "dropdown" %>
          <h1>Hello <%= current_user.first_name %> <%= current_user.last_name %></h1>
          <h5>You are a taxidermist since <%= @user.created_at.strftime("%B %d %Y") %></h5>
        <div class="tabs">
          <a class="tab active" href="#">
            <p>Reviews</p>
          </a>
          <a class="tab" href="#">
            <p>Bookings</p>
          </a>
          <a class="tab" href="#">
            <p>Animals</p>
          </a>
        </div>
      </div>
    </div>
  </div>
</div>



<% @user.animals.each do |animal| %>
  <%= animal.title %>
  <p>bookings:</p>
  <% animal.bookings.each do |booking| %>
    <p>from:</p>
    <% avatar_url = booking.user.facebook_picture_url || "http://placehold.it/30x30" %>
    <%= image_tag avatar_url, class: "avatar dropdown-toggle", id: "navbar-wagon-menu", "data-toggle" => "dropdown" %>
    <%= booking.user.first_name %> <%= booking.user.last_name %>
    <%= booking.start_date %>
    <%= booking.end_date %>
    <%= booking.price %>
    <%= booking.status %>
  <% end %>
<% end %>

<p>My bookings:</p>
<% @user.bookings.each do |booking| %>
  <%= cl_image_tag booking.animal.photo, height: 100, width: 100, crop: :fill %>
  <%= booking.animal.title %>
  <%= booking.user.first_name %> <%= booking.user.last_name %>
  <%= booking.animal.address %>
  <%= booking.price %>
  <%= booking.status %>
  <p>from</p> <%= booking.start_date %> <p>to</p> <%= booking.end_date %>
<% end %>
